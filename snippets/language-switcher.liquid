{% if localization.available_languages.size > 1 %}
  <div class="lang-switcher">
    {% for lang in localization.available_languages %}
      {% if lang.iso_code == localization.language.iso_code %}
        <span class="lang active">{{ lang.iso_code | upcase }}</span>
      {% else %}
        <a
          class="lang"
          href="{{ lang.root_url }}"
          aria-label="Switch language to {{ lang.name }}"
        >
          {{ lang.iso_code | upcase }}
        </a>
      {% endif %}
    {% endfor %}
  </div>
{% endif %}
